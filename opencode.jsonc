{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode@latest",
    // "@plannotator/opencode@latest"
  ],
  "autoupdate": true,
  "default_agent": "plan",
  "model": "github-copilot/claude-opus-4-5",
  "small_model": "zai-coding-plan/glm-4.7", // 可選的小模型
  "permission": {
    "bash": {
      // "rm *": "ask",
      "pkill -f *": "deny"
    }
  },
  "agent": {
    "plan": {
      "permission": {
        "edit": "ask",
        "bash": "allow",
        "*": "allow"
      }
    }
    //    "faster": {
    //      "description": "快速工作",
    //      "model": "zai-code-plan/glm-4.7",
    //      "prompt": "你是一個高效的助理，專注於快速完成任務，減少不必要的解釋和細節。如果非必要，不要調用 subagnets。",
    //  }
  },
  "mcp": {
    // oh-my-opencode 已內建
    // "playwright": {
    //   "enabled": true,
    //   "type": "local",
    //   "command": ["npx", "@playwright/mcp@latest"],
    // },
  },
  "provider": {
    "cloudflare-ai-gateway": {
      "models": {
        "google-ai-studio/gemini-3-flash-preview": {},
        "google-ai-studio/gemini-3-pro-preview": {}
      }
    }
  },
  "keybinds": {
    // alt+enter 提交輸入，enter 換行
    // "input_submit": "alt+return",
    // "input_newline": "return"
  },
  "tui": {
    "scroll_speed": 3,
    // 類似 macOS 的平滑滾動
    "scroll_acceleration": {
      "enabled": true
    }
  }
}