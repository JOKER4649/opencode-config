{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode@beta",
    // "@plannotator/opencode@latest"
  ],
  "autoupdate": true,
  "default_agent": "plan",
  // "model": "opencode/glm-4.7-free",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "zai-coding-plan/glm-4.7", // 可選的小模型
  "permission": {
    "bash": {
      // "rm *": "ask",
      "pkill -f *": "deny",
    },
  },
  "agent": {
    "plan": {
      "permission": {
        "edit": "ask",
        "bash": "allow",
        "*": "allow",
      },
    },
    "Planner-Sisyphus": {
      "permission": {
        "edit": "ask",
        "bash": "allow",
        "*": "allow",
      },
    },
  },
  "mcp": {
    // oh-my-opencode 已內建
    // "playwright": {
    //   "enabled": true,
    //   "type": "local",
    //   "command": ["npx", "@playwright/mcp@latest"],
    // },
  },
  "provider": {},
